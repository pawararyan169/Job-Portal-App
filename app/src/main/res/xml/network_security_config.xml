<network-security-config>
    <!-- Allow cleartext (HTTP) traffic only to the specific local/emulator IPs -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allows traffic to the host machine (10.0.2.2) and local emulator IPv4 (10.0.3.2) -->
        <domain includeSubdomains="true">192.168.1.23</domain>
        <domain includeSubdomains="true">10.0.3.2</domain>
        <!-- Optional: Add 127.0.0.1 if your backend runs inside the emulator -->
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
</network-security-config>
